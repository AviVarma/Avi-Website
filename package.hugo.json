    "typeface-fira-code": "^1.1.13",
    "typeface-roboto-slab": "^1.1.13"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "cssnano": "^5.0.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "markdownlint-cli": "^0.28.1",
    "postcss": "^8.3.5",
