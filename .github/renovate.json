{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "npm": {
    "fileMatch": ["(^|/)package\\.hugo\\.json$"],
    "bumpVersion": "minor",
    "rangeStrategy": "bump",
    "updateLockFiles": false,
    "ignorePaths": [
      "package.json",

      "**/node_modules/**",
      "**/bower_components/**",
      "**/vendor/**",
      "**/examples/**",
      "**/__tests__/**",
      "**/test/**",
      "**/tests/**",
      "**/__fixtures__/**"
    ]
  }
}
